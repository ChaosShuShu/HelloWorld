filetype plugin indent on
syntax on

set number
set incsearch

set showmatch " 显示括号匹配
set showmode " Display in the bottom bar

set encoding=utf-8
" Chinese Support
"set fileencoding=utf-8,gbk,gb18030,gb2312
set termencoding=utf-8

"set list " display invisable character 
"set listchars=space:·,tab:→\ ,trail:·,eol:<
"highlight NonText ctermfg=grey
"highlight SpecialKey ctermfg=grey
"Display example:  	   	hello, test....end
set hlsearch "Highlight search results
set cursorline "Hight cursor line 

